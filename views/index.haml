!!!
%html
  %head
    %title SD Ruby
    %meta{charset: "utf-8"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}

    -# Assets
    %link{href: "https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css", rel: "stylesheet", type: "text/css"}
    %link{href: "/assets/app.css", rel: "stylesheet", type: "text/css"}
    %script{crossorigin: "anonymous", src: "https://kit.fontawesome.com/fe34692d84.js"}
    %script{src: "/assets/app.js"}

    - # Open Graph
    %meta{property: "og:description", content: "SD Ruby, based in San Diego, CA, is a meetup for developers who use Ruby, Ruby and Rails, and a ton of other fun web technologies."}
    %meta{property: "og:image", content: "#{request.url}icons/opengraph.png"}
    %meta{property: "og:image:width", content: 1200}
    %meta{property: "og:image:height", content: 630}
    %meta{property: "og:image:type", content: "image/png"}
    %meta{property: "og:locale", content: "en_US"}
    %meta{property: "og:site_name", content: "SD Ruby"}
    %meta{property: "og:title", content: "SD Ruby"}
    %meta{property: "og:type", content: "website"}
    %meta{property: "og:url", content: "http://sdruby.org"}

    - # Twitter card
    %meta{name: "twitter:card", content: "summary_large_image"}
    %meta{name: "twitter:description", content: "SD Ruby, based in San Diego, CA, is a meetup for developers who use Ruby, Ruby and Rails, and a ton of other fun web technologies."}
    %meta{name: "twitter:image", content: "#{request.url}icons/opengraph.png"}
    %meta{name: "twitter:title", content: "SD Ruby"}
    %meta{name: "twitter:site", content: "@sdruby"}

    - # Android icons
    - [196].each do |size|
      %link{href: "/icons/#{size}.png", rel: "shortcut icon", sizes: "#{size}x#{size}"}

    - # Google progressive web app manifest
    %link{rel: "manifest", href:"/manifest.json"}

    - # iOS home screen app title
    %meta{name: "apple-mobile-web-app-title", content: "Scientist"}

    - # iOS icons
    - [120, 180].each do |size|
      %link{href: "/icons/#{size}.png", rel: "apple-touch-icon", sizes: "#{size}x#{size}"}

    - # Windows tiles
    %meta{name: "msapplication-config", content: "/browserconfig.xml"}

    - # Generic icons
    - [128, 192, 256, 512].each do |size|
      %link{:href => "/icons/#{size}.png", :rel => "icon", :sizes => "#{size}x#{size}"}

  %body
    %section.section
      .container
        .content.is-large
          = image_tag("/assets/logo.svg", class: "logo", alt: "SD Ruby logo", size: "800x332")

          #intro
            %p SD Ruby, based in San Diego, CA, is a meetup for developers who use Ruby, Ruby and Rails, and a ton of other fun web technologies.

            %p Normally, we meet once in a month in person. But, until the pandemic is over, we'll be doing monthly virtual meetups.

            %p If you're interested in Ruby or Ruby on Rails, please join us!

          .columns
            .column
              %span.icon
                %i.fab.fa-meetup
              %span= link_to "Meetup", "https://www.meetup.com/sdruby/"
            .column
              %span.icon
                %i.fab.fa-google
              %span= link_to "Google", "https://groups.google.com/g/sdruby"
            .column
              %span.icon
                %i.fab.fa-twitter
              %span= link_to "Twitter", "https://twitter.com/sdruby"
            .column
              %span.icon
                %i.fab.fa-slack
              %span= link_to "Slack", "https://sd-ruby.slack.com/"
