!!!
%html
  %head
    %title= @title
    %link{href: "https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css", rel: "stylesheet", type: "text/css"}
    %link{href: "/styles/app.css?#{Time.now.to_i}", rel: "stylesheet", type: "text/css"}
    %script{src: "https://kit.fontawesome.com/2aaaf1daa6.js", crossorigin: "anonymous"}
    = haml :_meta
  %body
    %section.section
      .container
        .content.is-large
          .tabs
            %ul
              %li.tab= link_to "Home", "/"
              %li.tab= link_to "Meet the Organizers", "/organizers"
              %li.tab= link_to "Code of Conduct", "/conduct"
              %li.tab= link_to "Sign Up", "https://www.meetup.com/sdruby/", target: "blank", class: "button is-primary"

          = yield
